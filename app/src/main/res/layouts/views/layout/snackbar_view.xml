<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_232323"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/snackbar_message_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:lineSpacingExtra="2sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white_FFFFFF"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/snackbar_action_button"
            app:layout_constraintEnd_toStartOf="@id/snackbar_action_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/snackbar_action_button"
            tools:text="Ошибка подключения сети" />

        <Button
            android:id="@+id/snackbar_action_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black_232323"
            android:letterSpacing="0"
            android:textColor="@color/purple_A77DFF"
            android:textSize="14sp"
            app:backgroundTint="@color/black_232323"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Повторить" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>