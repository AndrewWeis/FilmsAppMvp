<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Font family -->
    <style name="Roboto"/>

    <!-- Colors -->
    <style name="Roboto.Black">
        <item name="android:textColor">@color/black_000000</item>
    </style>

    <style name="Roboto.Gray">
        <item name="android:textColor">@color/gray_4B4B4B</item>
    </style>

    <style name="Roboto.Purple">
        <item name="android:textColor">@color/purple_6936D6</item>
    </style>

    <style name="Roboto.White">
        <item name="android:textColor">@color/white_FFFFFF</item>
    </style>

    <!-- Sizes -->
    <style name="Roboto.White.Size26">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Roboto.Black.Size26">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Roboto.Purple.Size24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Roboto.Black.Size20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Roboto.White.Size18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Roboto.Black.Size18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Roboto.Gray.Size16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Purple.Size16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Black.Size16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Black.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text stretching -->
    <style name="Roboto.Black.Size26.Zero_W">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Roboto.Gray.Size16.Zero_W">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Roboto.Black.Size14.Zero_W">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Roboto.Purple.Size24.WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Roboto.Purple.Size16.WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Roboto.White.Size18.WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Roboto.Black.Size20.MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Roboto.Black.Size16.MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>